@page
@model View.Pages.Login
<!DOCTYPE html>

<html lang="en">
<head>
    <title>Login</title>
</head>
<body>
<div>
    <form method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="Email" asp-for="LoginRequest.Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="Password" asp-for="LoginRequest.Password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
        }
    </form>
</div>
</body>
</html>