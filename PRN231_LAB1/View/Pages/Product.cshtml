@page
@model View.Pages.Product
<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
</head>
<body>
<div class="container">
    <h1>Products</h1>
    <h1>@Model.UserEmail</h1>
    <div>
        <form method="post" asp-page="./AddProduct">
        <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Weight</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
                <th>Actions</th> <!-- New column for actions -->
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Weight</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td>
                        <div style="display: flex">
                            <!-- Update button -->
                            <form method="post" asp-page-handler="Update" asp-route-id="@product.ProductId" asp-page="./Update">
                                <button type="submit" class="btn btn-primary btn-sm">Update</button>
                            </form>

                            <!-- Delete button -->
                            <form method="post" asp-page-handler="Delete" asp-page="./Delete" asp-route-id="@product.ProductId">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                        
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
</body>
</html>