@page
@model Web.Pages.EditPubModel
@{
    ViewData["Title"] = "Edit Publisher";
}
<form method="post">
    <div class="form-group">
        <label asp-for="Publisher.PublisherName"></label>
        <input asp-for="Publisher.PublisherName" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <select asp-for="Publisher.City" class="form-control">
            <option value="">Select City</option>
            @foreach (var city in Model.VietnameseCities)
            {
                <option value="@city">@city</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Publisher.State"></label>
        <input asp-for="Publisher.State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Publisher.Country"></label>
        <input asp-for="Publisher.Country" class="form-control" />
    </div>

    <div style="padding-top : 1rem">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Publishers" class="btn btn-secondary">Cancel</a>
    </div>
</form>